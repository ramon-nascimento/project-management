// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Project {
  id          String @id @default(uuid())
  title       String
  description String
  Task        Task[]
}

model Task {
  id          String  @id @default(uuid())
  title       String
  description String?
  status      String?
  project     Project @relation(fields: [projectId], references: [id])
  projectId   String
}
